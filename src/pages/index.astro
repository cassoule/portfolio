---
import BaseLayout from '../layouts/BaseLayout.astro';
import Greeting from '../components/Greeting';
import HockeyTeamItem from "../components/HockeyTeamItem.vue";
const pageTitle = "Home Page";
const birth = new Date('2004-07-23');
const today = new Date();

let age = today.getFullYear() - birth.getFullYear();

const hasBirthPassed = (today.getMonth() > birth.getMonth()) ||
    (today.getMonth() === birth.getMonth() && today.getDate() >= birth.getDate());

if (!hasBirthPassed) {
    age--;
}
---
<BaseLayout pageTitle={pageTitle}>
    <section class="home" id="accueil">
        <div class="home-content">
            <h1>Milo <span>Gourvest</span></h1>
            <h3 class="typing-text">Je suis <span></span></h3>
            <p>
                Étudiant en 3e année de BUT Informatique à l'IUT de Lannion, et alternant en tant que développeur web full stack.</p>
            <div class="social-icons">
                <a href="https://www.linkedin.com/in/milo-gourvest-626231269/" target="_blank"><i class="fa-brands fa-linkedin"/> </a>
                <a href="https://github.com/cassoule" target="_blank"><i class="fa-brands fa-github"/> </a>
                <a href="mailto:milo.grv@gmail.com" target="_blank"><i class="fas fa-envelope"/> </a>
            </div>
            <!--<a href="#" class="btn">Hire me</a>-->
        </div>
    </section>
    <section class="home">
        <div id="experience"></div>
        <div class="home-content">
            <h2>Experience professionnelle</h2>
            <ol class="relative border-s ml-3">
                <li class="ms-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
                    <time class="mb-1 text-sm font-normal leading-none">Avril 2024 - Juin 2024</time>
                    <h4 class="text-lg font-semibold mt-2">Stage - Développement de web app - Laravel et Vue.js</h4>
                    <p class="mb-4 text-base font-normal text-gray-300 text-pretty">
                        Développement d'une web app de gestion d'entreprise (ventes, conseillers, clients, stocks, etc...)
                    </p>
                </li>
                <li class="ms-4">
                    <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
                    <time class="mb-1 text-sm font-normal leading-none">Septembre 2024 - Août 2025</time>
                    <h4 class="text-lg font-semibold mt-2">Alternance - Développement web</h4>
                    <p class="mb-4 text-base font-normal text-gray-300 text-pretty">
                        Suite du stage et développement d'autres web app
                    </p>
                </li>
            </ol>
        </div>
    </section>
    <section class="home">
        <div id="projets"></div>
        <div class="home-content">
            <h1>Projets</h1>
        </div>
    </section>
    <section class="home">
        <div id="surmoi"></div>
        <div class="home-content">
            <h1>Sur moi</h1>
        </div>
    </section>
</BaseLayout>